<%= stylesheet_link_tag("style") %>

<div id="container">

  <h2>Log in System</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row">
    <div class="field">
      <!-- <%= f.label :email %><br /> -->
      <%= f.email_field :email,
      placeholder: "Email",
      autofocus: true,
      autocomplete: "email",
      class: "form-control border" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="field">
      <!-- <%= f.label :password %><br /> -->
      <%= f.password_field :password,
      placeholder: "password",
      autocomplete: "current-password",
      class: "form-control border" %>
    </div>
  </div>
  
  <% if devise_mapping.rememberable? %>
  <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary col-sm-12 mt-2 mb-2" %>
  </div>
  
  <% end %>

  <%= render "devise/shared/links" %>

</div>